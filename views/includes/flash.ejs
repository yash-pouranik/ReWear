<style>
    .btn-close{
        border-radius: 0 !important;
        padding: 0.3rem 1rem 0.3rem 1rem !important;
        font-size: 1.3rem !important;
    }
    .alert{
        padding: 0.5rem !important;
    }
</style>


<% if(success && success.length){ %>
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="margin: 20px; margin-bottom: 0;">
        <%= success %>
        <button
            style="all: unset; margin-left: 10px;" 
            type="button" 
            class="btn-close" 
            data-bs-dismiss="alert" 
            aria-label="Close"
        >
            <span aria-hidden="true">&times;</span>
        </button>
   </div>
<% } %>


<% if (error && error.length > 0) { %>
    <div class="alert alert-danger " role="alert" style="margin: 20px; margin-bottom: 0;">
        <%= error[0] %>
        <button
            style="all: unset; margin-left: 10px;" 
            type="button" 
            class="btn-close" 
            data-bs-dismiss="alert" 
            aria-label="Close"
        >
            <span aria-hidden="true">&times;</span>
        </button>
   </div>
<% } %>