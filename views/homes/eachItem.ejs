<% layout('layout/boilerPlate') -%>

<style>
  body {
    background-color: #f9f9f9;
    font-family: 'Segoe UI', sans-serif;
  }

  .container {
    max-width: 850px;
    margin: 40px auto;
    padding: 30px;
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
  }

  h2 {
    font-size: 28px;
    margin-bottom: 5px;
    color: #333;
  }

  .subtitle {
    font-size: 15px;
    color: #777;
    margin-bottom: 20px;
  }

  .item-detail p {
    margin: 8px 0;
    font-size: 1rem;
    color: #444;
  }

  .tag-badge {
    display: inline-block;
    background: #e0f7fa;
    color: #00796b;
    padding: 4px 12px;
    margin: 3px 5px 3px 0;
    border-radius: 50px;
    font-size: 0.85rem;
  }

  .images {
    display: flex;
    flex-wrap: wrap;
    margin-top: 15px;
    gap: 15px;
  }

  .images img {
    width: 180px;
    height: 180px;
    object-fit: cover;
    border-radius: 10px;
    border: 1px solid #ddd;
    transition: transform 0.3s ease;
  }

  .images img:hover {
    transform: scale(1.05);
  }

  .section-title {
    margin-top: 30px;
    font-size: 1.1rem;
    font-weight: 600;
    color: #444;
    border-bottom: 1px solid #ddd;
    padding-bottom: 5px;
  }

  .uploader-info {
    margin-top: 15px;
    padding: 15px;
    background: #f3f4f6;
    border-radius: 10px;
  }

  .uploader-info p {
    margin: 5px 0;
    font-size: 0.95rem;
  }

  .action-buttons {
    display: flex;
    gap: 10px;
    margin-top: 25px;
  }

  .action-buttons form {
    display: inline;
  }

  .btn {
    padding: 8px 18px;
    font-size: 0.9rem;
    border: none;
    border-radius: 6px;
    cursor: pointer;
  }

  .btn-edit {
    background-color: #1976d2;
    color: white;
  }

  .btn-delete {
    background-color: #e53935;
    color: white;
  }

  .btn:hover {
    opacity: 0.9;
  }
</style>


  <h2><%= item.title %></h2>
  <p class="subtitle"><%= item.description %></p>

  <div class="item-detail">
    <p><strong>Category:</strong> <%= item.category %></p>
    <p><strong>Buy Type:</strong> <%= item.buyType %></p>
    <p><strong>Status:</strong> <%= item.status %></p>

    <p><strong>Tags:</strong>
      <% item.tags.forEach(tag => { %>
        <span class="tag-badge">#<%= tag %></span>
      <% }) %>
    </p>

    <% if (item.status === 'approved') { %>
      <div class="alert alert-success" role="alert">
         Available.
      </div>
    <% } else if (item.status === 'swapped') { %>
      <div class="alert alert-warning" role="alert">
        ‚ö†Ô∏è This item is already booked.
      </div>
    <% } else if (item.status !== 'approved') {  %>
      <div class="alert alert-warning" role="alert">
        ‚ö†Ô∏è This item is not approved yet. You should avoid buying it.
      </div>
    <% } %>

    

  </div>

  <div class="images">
    <% item.images.forEach(image => { %>
      <img src="<%= image %>" alt="Item Image">
    <% }) %>
  </div>

  <div class="section-title">üë§ Uploader Info</div>
  <div class="uploader-info">
    <p><strong>Name:</strong> <%= item.uploader.username %></p>
    <p><strong>Email:</strong> <%= item.uploader.email %></p>
  </div>




  <div class="action-buttons">
    <!-- üìù Edit/Delete Buttons for Uploader -->
    <% if (currUser && currUser.username === item.uploader.username) { %>
      <form action="/items/<%= item._id %>/edit" method="GET">
        <button class="btn btn-edit" type="submit">Edit</button>
      </form>

      <form action="/delete/item/<%= item._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <button class="btn btn-delete" type="submit">Delete</button>
      </form>



    
    <!-- üõí Buy / Swap Options for Other Users -->
    <% } else if (item.status === 'approved') { %>
      <% if (item.buyType === "points" || item.buyType === "both") { %>
        <form action="/items/<%= item._id %>/redeem" method="POST">
          <button class="btn btn-edit" type="submit">Redeem with Points</button>
        </form>
      <% } %>

      <% if (item.buyType === "swap" || item.buyType === "both") { %>
        <form action="/items/<%= item._id %>/swap" method="POST">
          <button class="btn btn-edit" type="submit">Request Swap</button>
        </form>
      <% } %>
    <% } %>
  </div>

