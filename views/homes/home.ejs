<% layout('layout/boilerPlate') -%>

<h1 class="text-center my-4">Featured Items</h1>

<div style="display: flex; flex-wrap: wrap; gap: 1rem; justify-content: center;">
  <% for (let item of items) { %>
    <div style="border: 1px solid #ccc; border-radius: 10px; padding: 1rem; width: 280px;">
      <img src="<%= item.images[0] %>" alt="Item Image" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px;">
      <h5 class="mt-2"><%= item.title %></h5>
      <p><%= item.category %> | <%= item.buyType %></p>
      <p><%= item.description.substring(0, 80) %>...</p>
      <a href="/items/<%= item._id %>" class="btn btn-sm btn-primary">View Details</a>
    </div>
  <% } %>
</div>
