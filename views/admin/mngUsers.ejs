<% layout('layout/boilerPlate') -%>

<div class="container my-5">
  <h2 class="text-center mb-4">👨‍💼 Admin Panel - Manage Users</h2>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% users.forEach((user, index) => { %>
      <div class="col">
        <a href="/dashboard/<%= user._id %>" class="text-decoration-none text-dark">
          <div class="card h-100 shadow rounded-4">
            <div class="card-body">
              <h5 class="card-title"><%= user.username %></h5>
              <p class="card-text mb-1"><strong>Email:</strong> <%= user.email %></p>
              <p class="card-text mb-1"><strong>Points:</strong> <%= user.points %></p>
              <p class="card-text mb-1">
                <strong>Admin:</strong>
                <span class="badge <%= user.isAdmin ? 'bg-success' : 'bg-secondary' %>">
                  <%= user.isAdmin ? 'Yes' : 'No' %>
                </span>
              </p>
              <p class="card-text"><strong>Joined:</strong> <%= user.createdAt.toDateString() %></p>
            </div>
            <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between px-3 pb-3">
              <form method="POST" action="/admin/<%= user._id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this user?');">
                <button class="btn btn-sm btn-outline-danger px-3">Delete</button>
              </form>

              <form method="GET" action="/admin/<%= user._id %>/edit" onclick="event.stopPropagation();">
                <button class="btn btn-sm btn-outline-primary px-3">Edit</button>
              </form>
            </div>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
</div>
